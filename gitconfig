[core]
    pager = diff-highlight | less -r
[credential]
    helper = cache --timeout=3600
[diff]
    tool = kitty
    guitool = kitty.gui
    algorithm = histogram
[difftool]
    prompt = false
    trustExitCode = true
[difftool "kitty"]
    cmd = kitty +kitten diff $LOCAL $REMOTE
[difftool "kitty.gui"]
    cmd = kitty kitty +kitten diff $LOCAL $REMOTE
[difftool "vimdiff"]
    path = nvim
[alias]
    d = !"git difftool --no-symlinks --dir-diff"
    ydiff = !"ydiff -s -w0"
    st = status
    co = checkout
    ci = commit
    br = branch
    du = diff -b
    dh = diff -b HEAD^!
    ds = diff -b --staged
    db = diff -b master...HEAD
    rb = rebase
    rbi = rebase -i
    rbc = rebase --continue
    rba = rebase --abort
    cp = cherry-pick
[include]
    path = ~/.gitconfig.local
[rebase]
    autosquash = true
[icdiff]
    pager = less
